<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
              android:weightSum="100"
              android:gravity="right">

    <ImageView
        android:id="@+id/del_iv"
        android:src="@drawable/del"
        style="@style/ImageViewInAprtmentEdit" />

    <ImageView
        style="@style/ImageViewInAprtmentEdit"
        android:id="@+id/shown_iv"
        android:src="@drawable/shown" />


    <ImageView
        style="@style/ImageViewInAprtmentEdit"
        android:id="@+id/down_iv"
        android:src="@drawable/down" />
    <ImageView
        style="@style/ImageViewInAprtmentEdit"
        android:id="@+id/up_iv"
        android:src="@drawable/up" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_gravity="center"
        android:id="@+id/apart_new_name"
        android:hint="@string/apartment_name"
        android:gravity="center"/>

    <ImageView
        style="@style/ImageViewInAprtmentEdit"
        android:id="@+id/apart_type_iv"
        android:src="@drawable/ic_home" />


</LinearLayout>